# Database - SQLite file stored in prisma folder
# For local development, use a local file path
# For production (Vercel), use a hosted database like Turso, PlanetScale, or Supabase
DATABASE_URL="file:./prisma/besso-ranch.db"

# Admin JWT Secret (generate a random string for production)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Stripe Payment Integration
# Get your keys from https://dashboard.stripe.com/apikeys
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY="sk_test_YOUR_TEST_SECRET_KEY"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_TEST_PUBLISHABLE_KEY"
# Get webhook secret from Stripe Dashboard > Developers > Webhooks
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"

# Base URL for checkout redirects
# Update to your domain in production
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Livestock App Sync
# Secret key for authenticating sync requests from the Livestock app
SYNC_SECRET="besso-ranch-sync-2024"
